{
    "name": "app-build",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "devDependencies": {
      "bun": "1.2.5"
    },
    "scripts": {
      "db:push": "bun run --filter app-build-server db:push",
      "dev:server": "bun run --filter app-build-server dev",
      "dev:client": "bun run --filter app-build-client dev",
      "dev:all": "bun run dev:server & bun run dev:client"
    }
  }
  